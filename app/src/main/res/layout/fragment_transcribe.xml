<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mysungrussian.mysungrussian.SavedFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/transcribe_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:id="@+id/frameLayout"
            android:focusableInTouchMode="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:layout_gravity="top"
                android:layout_marginTop="25dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:focusable="false">

                    <EditText
                        android:id="@+id/input_field"
                        android:layout_marginTop="21dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:gravity="top|left"
                        android:text="Здравствуйте"
                        android:background="@android:color/transparent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:lineSpacingExtra="30dp"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="20sp"
                        />

                    <EditText
                        android:id="@+id/output_field2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:gravity="top|left"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:lineSpacingExtra="30dp"
                        android:textColor="@color/colorPrimary"
                        android:textCursorDrawable="@drawable/cursor"
                        android:visibility="gone"
                        />

                </FrameLayout>
            </ScrollView>

            <ImageButton
                android:id="@+id/btn_clear"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|top"
                android:onClick="onClickClear"
                android:src="@drawable/ic_clear_black_24dp"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/frameLayout"
                android:layout_marginStart="63dp"
                android:layout_margin="7dp" />

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:src="@drawable/ic_check_white_24dp"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onClickTranscribe"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
