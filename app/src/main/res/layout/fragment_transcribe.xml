<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mysungrussian.mysungrussian.SavedFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/transcribe_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="5dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="50dp"
            android:padding="8dp"
            android:background="@drawable/layout_boarder"
            android:id="@+id/frameLayout"
            android:focusableInTouchMode="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:layout_gravity="top"
                android:layout_marginTop="25dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:focusable="false">

                    <EditText
                        android:id="@+id/input_field"
                        android:layout_marginTop="21dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:gravity="top|left"
                        android:text="Здравствуйте"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:lineSpacingExtra="30dp"
                        android:textCursorDrawable="@drawable/cursor"
                        android:background="@android:color/transparent"
                        android:textSize="18sp"
                        />

                    <EditText
                        android:id="@+id/output_field2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:gravity="top|left"
                        android:text="zdrɑ.vzdvuj.tʲɛ"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:lineSpacingExtra="32dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:textCursorDrawable="@drawable/cursor"
                        android:visibility="gone"
                        />

                </FrameLayout>
            </ScrollView>

            <ImageButton
                android:id="@+id/btn_clear"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|top"
                android:onClick="buttonOnClick"
                android:src="@drawable/ic_clear_black_24dp"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/frameLayout"
                android:layout_marginStart="63dp"
                android:clickable="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/btn_go_up"
                android:background="@drawable/ic_keyboard_arrow_up_white_24dp"
                android:onClick="buttonOnClick"
                android:layout_gravity="right|bottom"
                android:layout_margin="5dp"/>

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/btn_go_down"
                android:background="@drawable/ic_keyboard_arrow_down_white_24dp"
                android:onClick="buttonOnClick"
                android:layout_gravity="right|bottom"
                android:layout_margin="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom">


                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/btn_copy"
                    android:background="@drawable/ic_content_copy_white_24dp"
                    android:onClick="buttonOnClick"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/imageButton_save_trans"
                    android:background="@drawable/technology"
                    android:contentDescription="@string/save_file"
                    android:onClick="buttonOnClick"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="5dp"/>
            </LinearLayout>

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_white_24dp"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="buttonOnClick"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
