<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mysungrussian.mysungrussian.SavedFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/transcribe_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER"
            android:id="@+id/btn"
            android:layout_gravity="right|center_vertical"
            android:onClick="onClickTranscribe"
            android:background="#CC3333"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/frameLayout"
            android:layout_marginEnd="63dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/btn"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:id="@+id/frameLayout"
            android:focusableInTouchMode="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:layout_gravity="top" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:focusable="false">

                    <EditText
                        android:id="@+id/input_field"
                        android:layout_marginTop="21dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:gravity="top|left"
                        android:text="Здравствуйте"
                        android:background="@android:color/transparent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:lineSpacingExtra="30dp"
                        android:textCursorDrawable="@drawable/cursor"
                        />

                    <EditText
                        android:id="@+id/output_field2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:gravity="top|left"
                        android:text="zdrɑ.vzdvuj.tʲɛ"
                        android:background="@android:color/transparent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:lineSpacingExtra="30dp"
                        android:textColor="#CC3333"
                        android:textCursorDrawable="@drawable/cursor"
                        android:visibility="gone"
                        />



                </FrameLayout>
            </ScrollView>

        </FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:id="@+id/btn_clear"
            android:layout_gravity="right|center_vertical"
            android:onClick="onClickClear"
            android:background="#575757"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/frameLayout"
            android:layout_marginStart="63dp" />

    </RelativeLayout>

</FrameLayout>
